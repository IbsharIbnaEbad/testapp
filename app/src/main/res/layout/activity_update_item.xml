<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_update"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".stock_update">

    <TextView
        android:id="@+id/text_view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"

        android:gravity="center"
        android:text="Update Item "
        android:background="#83625C46"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp"
        android:textStyle="italic" />


    <EditText
        android:id="@+id/edit_text_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="#83625C46"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="italic"
        android:hint="ItemName" />

    <EditText
        android:id="@+id/edit_text_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ItemPrice"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:background="#83625C46"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="italic"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_text_product_description"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:textAlignment="center"
        android:background="#83625C46"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginTop="5dp"

        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:hint="ItemDescription" />

    <TextView
        android:id="@+id/text_view_product_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#95E4DDDD"
        android:enabled="false"
        android:hint="Item_ID"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image_view_product"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_upload"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/button_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#264DBF"
        android:text="Select Image" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#054A44"
            android:text="Search" />

        <Button
            android:id="@+id/button_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#5F4563"
            android:text="Update" />
    </LinearLayout>

</LinearLayout>